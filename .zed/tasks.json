[
	{
		"label": "Configure (CMake)",
		"command": "cmake",
		"args": ["-S", "./", "-B", "build"],
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always",
		"hide": "never",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"show_summary": true,
		"show_command": true,
	},

	{
		"label": "Build (CMake) [Windows/PowerShell]",
		"command": "powershell",
		"args": ["-NoProfile", "-Command", "cmake --build build"],
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always",
		"hide": "never",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"show_summary": true,
		"show_command": true,
	},
	{
		"label": "Run Server [Windows/PowerShell]",
		"command": "powershell",
		"args": [
			"-NoProfile",
			"-Command",
			"$server = Join-Path $env:ZED_WORKTREE_ROOT 'build\\bin\\server.exe'; & $server",
		],
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always",
		"hide": "never",
		"use_new_terminal": true,
		"allow_concurrent_runs": true,
		"show_summary": true,
		"show_command": true,
	},
	{
		"label": "Run Client [Windows/PowerShell]",
		"command": "powershell",
		"args": [
			"-NoProfile",
			"-Command",
			"$client = Join-Path $env:ZED_WORKTREE_ROOT 'build\\bin\\client.exe'; & $client",
		],
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always",
		"hide": "never",
		"use_new_terminal": true,
		"allow_concurrent_runs": true,
		"show_summary": true,
		"show_command": true,
	},
	{
		"label": "Build and Run (Server + Client) [Windows/PowerShell]",
		"command": "powershell",
		"args": [
			"-NoProfile",
			"-Command",
			"cmake --build build; $server = Join-Path $env:ZED_WORKTREE_ROOT 'build\\bin\\server.exe'; Start-Process -FilePath $server; $client = Join-Path $env:ZED_WORKTREE_ROOT 'build\\bin\\client.exe'; & $client",
		],
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always",
		"hide": "never",
		"use_new_terminal": true,
		"allow_concurrent_runs": true,
		"show_summary": true,
		"show_command": true,
	},

	{
		"label": "Build (CMake) [Linux/macOS/sh]",
		"command": "sh",
		"args": ["-lc", "cmake --build build"],
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always",
		"hide": "never",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"show_summary": true,
		"show_command": true,
	},
	{
		"label": "Run Server [Linux/macOS/sh]",
		"command": "sh",
		"args": ["-lc", "\"$ZED_WORKTREE_ROOT/build/bin/server\""],
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always",
		"hide": "never",
		"use_new_terminal": true,
		"allow_concurrent_runs": true,
		"show_summary": true,
		"show_command": true,
	},
	{
		"label": "Run Client [Linux/macOS/sh]",
		"command": "sh",
		"args": ["-lc", "\"$ZED_WORKTREE_ROOT/build/bin/client\""],
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always",
		"hide": "never",
		"use_new_terminal": true,
		"allow_concurrent_runs": true,
		"show_summary": true,
		"show_command": true,
	},
	{
		"label": "Build and Run (Server + Client) [Linux/macOS/sh]",
		"command": "sh",
		"args": [
			"-lc",
			"cmake --build build && ( \"$ZED_WORKTREE_ROOT/build/bin/server\" & ) && \"$ZED_WORKTREE_ROOT/build/bin/client\"",
		],
		"cwd": "$ZED_WORKTREE_ROOT",
		"reveal": "always",
		"hide": "never",
		"use_new_terminal": true,
		"allow_concurrent_runs": true,
		"show_summary": true,
		"show_command": true,
	},
]
